<div class="contact-container">
    <form method="POST" action="/submit-feedback" class="contact-feedback-form">
        <!-- Contact Fields -->
        <input type="text" placeholder="Name" class="contact-input" name="name" required>
        <input type="email" placeholder="Email" class="contact-input" name="email" required>
        <textarea name="message" cols="30" rows="5" class="contact-input" placeholder="Your Message" required></textarea>

        <!-- Feedback Fields -->
        <input type="hidden" name="class_id" value="1">
        <textarea name="feedback_text" cols="30" rows="5" class="contact-input" placeholder="Leave feedback" required></textarea>

        <!-- Rating using a dropdown (select) -->
        <div class="rating-container">
            <label for="rating">Rate Us:</label>
            <select name="rating" id="rating" class="contact-input" required>
                <option value="" disabled selected>Select a rating</option>
                <option value="1">1 - Very Poor</option>
                <option value="2">2 - Poor</option>
                <option value="3">3 - Average</option>
                <option value="4">4 - Good</option>
                <option value="5">5 - Excellent</option>
            </select>
        </div>

        <!-- Submit Button -->
        <input type="submit" value="Send" class="contact-button">
    </form>
</div>
