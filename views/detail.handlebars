<div class="product-page-container">
    <div class="product-info">
        <div class="product-images">
            <div class="image-grid">
                <div class="image-container">
                    <img src="/image/detail-page-right.jpg" alt="Class detail image">
                    <div class="class-name"><h2>{{classDetail.className}}</h2></div>
                    
                    <!-- Preview button -->
                    <button class="preview">
                        <img src="/icons/detail-arrow.png" alt="Preview icon" class="icon">Preview</button>
                </div>
                <img src="/image/detail-page-left.png" alt="Class detail image">
            </div>
        </div>

        <!-- Sections for each menu item -->
        <div class="sections">
            <section id="reviews">
                <h2>Reviews</h2>
            </section>
            <section id="class-introduction">
                <h2>Class Introduction</h2>
            </section>
            <section id="curriculum">
                <h2>Curriculum</h2>
            </section>
            <section id="kit-introduction">
                <h2>Kit Introduction</h2>
            </section>
            <section id="creator">
                <h2>Creator</h2>
            </section>
            <section id="community">
                <h2>Community</h2>
            </section>
            <section id="refund-policy">
                <h2>Refund Policy</h2>
            </section>
            <section id="recommendations">
                <h2>Recommendations</h2>
            </section>
        </div>
        
        <!-- Detail information of a class -->
        <div class="details">
            <div class="class-information-title">Class Information</div>
            <div class="class-date-title">Class start date
                <div class="class-date-text"><h3>{{classDetail.classDate}}</h3></div>
            </div>
            
            <div class="class-type-title">Type of class
                <div class="class-type-text"><h3>{{classDetail.classType}}</h3></div>
            </div>

            <div class="class-format-title">Format
                <div class="class-format-text"><h3>{{classDetail.classFormat}}</h3></div>
            </div>

            <div class="class-detail-container">

                <p><strong>Price:</strong> {{classDetail.classPrice}} SEK</p>
                <p><strong>Time:</strong> {{classDetail.startTime}} - {{classDetail.endTime}}</p>
                <p><strong>Format:</strong> {{classDetail.classFormat}}</p>
                {{#if classDetail.address}}
                    <p><strong>Address:</strong> {{classDetail.address}}, {{classDetail.postcode}}</p>
                {{/if}}
                <a href="/registerclass" class="register-button">Register Now</a>
            </div>
        </div>
    </div>
</div>
