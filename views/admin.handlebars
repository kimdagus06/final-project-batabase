<div class="user-management">
  <h1>User Management</h1>
  <div class="table-container">
    <table class="user-table">
      <thead>
        <tr>
          <th>ID</th>
          <th>User Name</th>
          <th>Email Address</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        {{#each users}}
        <tr data-id="{{this.id}}">
          <td>{{this.id}}</td>
          <td>
            <span class="user-name">{{this.username}}</span>
            <input type="text" class="edit-name" value="{{this.username}}" style="display:none;">
          </td>
          <td>
            <span class="user-email">{{this.emailAddress}}</span>
            <input type="email" class="edit-email" value="{{this.emailAddress}}" style="display:none;">
          </td>
          <td>
            <!-- Edit and delete buttons -->
            <button class="edit-btn">Edit</button>
            <button class="save-btn" style="display:none;">Save</button> |
            <form action="/admin/delete-user/{{this.id}}" method="POST" style="display:inline;">
              <button type="submit" class="delete-btn">Delete</button>
            </form>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
