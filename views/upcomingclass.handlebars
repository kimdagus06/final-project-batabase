<body>
    <h1>Upcoming Classes</h1>
    <ul id="class-list">
        {{#each classes}}
            <li>
                <strong>Teacher: {{id}}</strong> 
                <strong>{{userName}}</strong> is holding this class: 
                <strong>{{className}}</strong> - {{classType}} - {{startTime}} - {{endTime}} - {{classFormat}} - {{address}} - {{postcode}}
            </li>
        {{else}}
            <li>No upcoming classes available.</li>
        {{/each}}
    </ul>

    <!-- Pagination for grade 4 -->
    <div class="pagination">
        <button id="prev-page">Previous</button>
        <span id="page-info">Page 1</span>
        <button id="next-page">Next</button>
    </div>

    <a href="/registerclass">Register New Class</a>
    <a href="/">Back to Home</a>

    <script src="pagination.js"></script> <!-- Link to your JavaScript file -->
</body>
