<ul id="class-list">
    {{#each classes}}
        <li class="class-item card">
            <div class="class-info">
                <!-- INNER JOIN part -->
                <span><strong>Teacher ID:</strong> {{user_id}}</span><br> <!-- teacher ID -->
                <span><strong>{{username}}</strong> is holding this class:</span><br>
                <span><strong>{{className}}</strong></span><br>
                <span>{{classType}}</span> - 
                <span>{{classFormat}}</span> - 
                <span>{{address}}</span>
            </div>
            <div class="upcoming-buttons">
                <input type="button" value="View Details" class="viewdetails">
                <input type="button" value="Register class" class="registerclass">
            </div>
        </li>
    {{/each}}
    {{#unless classes.length}}
    <!-- If there is no registered class, this text will be displayed. -->
        <li>No upcoming classes available.</li>
    {{/unless}}
</ul>

    <div class="pagination">
        <button id="prev-page" class="button-pagination">Previous</button>
        <span id="page-info">Page 1</span>
        <button id="next-page" class="button-pagination">Next</button>
    </div>

    <div class="upcoming-buttons">
        <a href="/registerclass" class="button-register-new">Register New Class</a>
        <a href="/" class="button-back-to-home">Back to Home</a>
    </div>