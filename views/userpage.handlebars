 <!-- User Profile Information -->
<section class="profile-section">
    <h3>Your Profile</h3>
    <form id="update-user-form" method="POST" action="/user/edit-user/:id{{userId}}">
        <label for="username">Username:</label>
        <input type="text" id="username" name="username" value="{{name}}" required>

        <label for="emailAddress">Email:</label>
        <input type="email" id="emailAddress" name="emailAddress" value="{{emailAddress}}" required>

        <button type="submit">Update Profile</button>
    </form>
</section>