 <!-- User Profile Information -->
        <section class="profile-section">
            <h3>Your Profile</h3>
            <form id="update-user-form" method="POST" action="/user/edit-user/{{userId}}">
                <label for="username">Username:</label>
                <input type="text" id="username" name="username" value="{{name}}" required>

                <label for="emailAddress">Email:</label>
                <input type="email" id="emailAddress" name="emailAddress" value="{{emailAddress}}" required>

                <button type="submit">Update Profile</button>
            </form>
        </section>

        <!-- Registered Classes -->
        <section class="classes-section">
            <h3>Your Registered Classes</h3>
            <ul>
                {{#if isLoggedIn}}
                <li id="menulogin"><a href="/logout">Logout</a></li>
                <li id="menuuserpage"><a href="/userpage">User Page</a></li>
                {{#if isAdmin}} <!-- Show admin menu if user is admin -->
                <li id="menuadmin"><a href="/admin">User manage</a></li>
                {{/if}}
                {{else}}
                <li id="menulogin"><a href="/login">Login</a></li>
                {{/if}}
            </ul>
        </section>